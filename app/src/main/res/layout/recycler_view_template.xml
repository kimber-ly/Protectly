<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Penyidikan"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/txt_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penipuan"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/txt_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dilaporkan 22 September 2022"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_kode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode: XXXX/XXXXX/XXXXX"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_arrow_forward" />


</LinearLayout>