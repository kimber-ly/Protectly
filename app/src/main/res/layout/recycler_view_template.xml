<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="20dp"
        android:background="@drawable/rounded_table_background"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/tableLayout2">

            <TableRow
                android:layout_marginBottom="10dp"
                >
                <Button
                    android:id="@+id/txt_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_on_primary"
                    android:text="Penyidikan"
                    android:textSize="11sp"
                    />

                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent" />

            </TableRow>

            <TextView
                android:id="@+id/txt_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penipuan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                tools:layout_conversion_absoluteHeight="22dp"
                tools:layout_editor_absoluteY="78dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_conversion_absoluteWidth="300dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_conversion_absoluteHeight="10dp"
                tools:layout_editor_absoluteY="100dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_conversion_absoluteWidth="300dp" />

            <TextView
                android:id="@+id/txt_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dilaporkan 22 September 2022"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_editor_absoluteY="110dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_conversion_absoluteWidth="300dp" />

            <TextView
                android:id="@+id/txt_kode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode: XXXX/XXXXX/XXXXX"
                android:textSize="12sp"
                tools:layout_conversion_absoluteHeight="16dp"
                tools:layout_editor_absoluteY="126dp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_conversion_absoluteWidth="300dp" />

        </TableLayout>

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_arrow_forward" />

    </TableRow>


</LinearLayout>