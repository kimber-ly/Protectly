<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@color/md_theme_light_surfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImagekontak"
            android:layout_width="141dp"
            android:layout_height="113dp"
            android:layout_marginStart="4dp"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:src="@drawable/img_begal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="20dp"
            android:text="6 Agustus 2023"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/deskripsi1_artikel"
            app:layout_constraintEnd_toEndOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listImagekontak1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/img_kompas"
            app:layout_constraintBottom_toTopOf="@+id/deskripsi1_artikel"
            app:layout_constraintEnd_toStartOf="@+id/judul_artikel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/listImagekontak" />

        <TextView
            android:id="@+id/deskripsi1_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:text="Begal : Berlindung di balik HAM?"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/deskripsi2_artikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toEndOf="@+id/listImagekontak" />

        <TextView
            android:id="@+id/judul_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="76dp"
            android:text="Kompasania"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/subtitle_artikel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/deskripsi2_artikel"
            android:layout_width="189dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Sampai saat ini begal masih menjadi trending topik bagi masyarakat Kota Medan, Sumatra"
            android:textSize="9sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/listImagekontak"
            app:layout_constraintTop_toBottomOf="@+id/deskripsi1_artikel" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>