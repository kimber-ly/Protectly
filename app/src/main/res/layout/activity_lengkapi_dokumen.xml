<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lengkapi_Dokumen">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:text="Lengkapi Dokumen"
                android:textSize="27sp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="413dp"
        android:layout_height="138dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_inputnama"
                android:layout_width="355dp"
                android:layout_height="53dp"
                android:layout_marginStart="25dp"
                android:hint="@string/nama" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="70dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_inputaemail"
                android:layout_width="356dp"
                android:layout_height="54dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:hint="@string/email" />
        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="Upload KTP(WAJIB)"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.cardview.widget.CardView
                android:layout_width="377dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/Uploaddok1"
                    android:layout_width="120dp"
                    android:layout_height="41dp"
                    android:layout_marginHorizontal="230dp"
                    android:layout_marginVertical="100dp"
                    android:text="Upload" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/outline_laporan" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="150dp"
                    android:layout_marginVertical="30dp"
                    android:src="@drawable/upload" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="33dp"
                    android:layout_marginHorizontal="145dp"
                    android:layout_marginVertical="70dp"
                    android:text="Browse file" />


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="Dokumen Tambahan (Optional)"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="KK, SIM, STNK, NPWP, Surat Pengantar RW, dan lainnya*"
                    android:textSize="12dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.cardview.widget.CardView
                android:layout_width="377dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/Uploaddok2"
                    android:layout_width="120dp"
                    android:layout_height="41dp"
                    android:layout_marginHorizontal="230dp"
                    android:layout_marginVertical="100dp"
                    android:text="Upload" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/outline_laporan" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="150dp"
                    android:layout_marginVertical="30dp"
                    android:src="@drawable/upload" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="33dp"
                    android:layout_marginHorizontal="145dp"
                    android:layout_marginVertical="70dp"
                    android:text="Browse file" />


            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="Dokumen Tambahan (Optional)"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:text="KK, SIM, STNK, NPWP, Surat Pengantar RW, dan lainnya*"
                    android:textSize="12dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.cardview.widget.CardView
                android:layout_width="377dp"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="430dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/Uploaddok3"
                    android:layout_width="120dp"
                    android:layout_height="41dp"
                    android:layout_marginHorizontal="230dp"
                    android:layout_marginVertical="100dp"
                    android:text="Upload" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/outline_laporan" />

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="35dp"
                    android:layout_marginHorizontal="150dp"
                    android:layout_marginVertical="30dp"
                    android:src="@drawable/upload" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="33dp"
                    android:layout_marginHorizontal="145dp"
                    android:layout_marginTop="70dp"
                    android:text="Browse file" />

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="140dp"
                android:layout_marginTop="600dp"
                android:layout_marginBottom="50dp"
                android:text="Simpan" />


        </RelativeLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>