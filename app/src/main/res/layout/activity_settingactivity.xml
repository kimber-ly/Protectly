<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settingactivity">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gambar1" />

    <ImageView
        android:id="@+id/gambar2"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_view1"
        android:src="@drawable/baseline_logout"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:text="Akun"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/gambar1"
        app:layout_constraintTop_toBottomOf="@id/gambar1" />
    <Button
        android:id="@+id/button_akun1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/button"
        android:layout_marginRight="25dp"
        app:layout_constraintTop_toBottomOf="@id/text_akun"/>

    <ImageView
        android:id="@+id/gambar_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_securit"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@+id/button_akun1"
        app:layout_constraintTop_toTopOf="@+id/button_akun1"
        app:layout_constraintBottom_toBottomOf="@id/button_akun1"/>

    <TextView
        android:id="@+id/text_akun1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:text="Keamanan Akun"
        android:textStyle="bold"
        android:textColor="#00174C"
        app:layout_constraintStart_toEndOf="@id/gambar_akun"
        app:layout_constraintTop_toTopOf="@id/button_akun1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email, Kata Sandi"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/text_akun1"
        app:layout_constraintStart_toStartOf="@id/text_akun1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_arrow_forward"
        app:layout_constraintEnd_toEndOf="@id/button_akun1"
        app:layout_constraintTop_toTopOf="@+id/gambar_akun"
        />
</androidx.constraintlayout.widget.ConstraintLayout>